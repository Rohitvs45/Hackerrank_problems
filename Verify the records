
#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
  int n,x,c,count,p;
  c=3;
  int a[1];
  a[0]=1;
  a[1]=2;
  count=0;
  cin>>n;
  for(int i=0;i<n;i++)
  {
    cin>>x;
    if(x==a[0] || x==a[1])
    { 
       if(a[0]==x)
       { 
         p=a[1];
         a[1]=c;
         c=p;
       }
       else
       { 
         p=a[0];
         a[0]=c;
         c=p;
       }
    }
    else
      count++;
    
  }
  if(count !=0){
    cout<<"NO";}
  else{
    cout<<"YES";}
    
    return 0;
}
